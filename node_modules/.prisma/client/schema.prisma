// after changing this file run : npx prisma generate

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DB_URL")
  relationMode = "prisma"
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  Orders   Orders[]
}

model Book {
  id        String   @id @default(uuid())
  title     String
  author    String
  isbn      String
  pages     Int
  available Boolean
  genre     String
  Orders    Orders[]
}

model Orders {
  id String @id @default(uuid())

  order_type ItemType

  book_id String?
  record_id String?

  user_id String

  order_date DateTime
  delivery_date DateTime?
  payment_method String
  comment String?

  user User @relation(fields: [user_id], references: [id])
  book Book? @relation(fields: [book_id], references: [id])
  record Record? @relation(fields: [record_id], references: [id])

  @@index([book_id])
  @@index([record_id])
  @@index([user_id])
}


model Record {
  id        String @id @default(uuid())
  title     String
  artist    String
  year      Int
  available Boolean
  genre     String
  Orders    Orders[]
}

enum ItemType {
  BOOK
  RECORD
}
